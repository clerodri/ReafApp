<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/cardview_dark_background"

    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etTodoName"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:hint="@string/agregar_tarea"
        />
    <TextView
        android:id="@+id/etTodoNameError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TO-DO name cannot be blank"
        android:textColor="#FF0000"
        android:textSize="13sp"
        android:textStyle="italic"
        android:visibility="gone"
        />
    <EditText
        android:id="@+id/etValue"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:inputType="numberDecimal"
        android:hint="@string/valor"
        />
    <TextView
        android:id="@+id/etValueError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Value cannot be empty"
        android:textColor="#FF0000"
        android:textSize="13sp"
        android:textStyle="italic"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addTodo"
        style="@style/ShapeAppearanceOverlay.Material3.Button"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />

    
    
    
</LinearLayout>